<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    tools:context=".UserProfile">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:background="#105EF1"
        android:padding="10dp">
        
        <ImageView
            android:id="@+id/profile_image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerVertical="true"
            android:src="@drawable/profile"/>

        <TextView
            android:id="@+id/fullname_field"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/profile_image"
            android:fontFamily="@font/roboto_bold"
            android:includeFontPadding="false"
            android:text="Taimoor Sikander"
            android:textColor="#000"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/username_field"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/fullname_field"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/profile_image"
            android:includeFontPadding="false"
            android:text="taimoor_sikander"
            android:textSize="14sp" />
    </RelativeLayout>
    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_marginTop="-100dp"
        android:layout_width="match_parent">

        <com.google.android.material.card.MaterialCardView
            android:layout_height="125dp"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            app:cardBackgroundColor="#02F6D5"
            app:cardElevation="10dp">

            <RelativeLayout
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:padding="5dp">

                <ImageView
                    android:layout_centerHorizontal="true"
                    android:layout_height="30dp"
                    android:layout_width="30dp"
                     />

                <TextView
                    android:fontFamily="@font/roboto_bold"
                    android:id="@+id/payment_label"
                    android:includeFontPadding="false"
                    android:layout_centerInParent="true"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="$123"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/payment_desc"
                    android:includeFontPadding="false"
                    android:layout_below="@id/payment_label"
                    android:layout_centerHorizontal="true"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="Balance"
                    android:textSize="20sp" />



            </RelativeLayout>



        </com.google.android.material.card.MaterialCardView>
        <com.google.android.material.card.MaterialCardView
            android:layout_height="125dp"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            app:cardBackgroundColor="#02F6D5"
            app:cardElevation="10dp">

            <RelativeLayout
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:padding="5dp">

                <ImageView
                    android:layout_centerHorizontal="true"
                    android:layout_height="30dp"
                    android:layout_width="30dp"
                     />

                <TextView
                    android:fontFamily="@font/roboto_bold"
                    android:id="@+id/paymentlabel"
                    android:includeFontPadding="false"
                    android:layout_centerInParent="true"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="$123"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/paymentdesc"
                    android:includeFontPadding="false"
                    android:layout_below="@id/paymentlabel"
                    android:layout_centerHorizontal="true"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="Balance"
                    android:textSize="20sp" />



            </RelativeLayout>



        </com.google.android.material.card.MaterialCardView>
    </LinearLayout>

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:padding="20dp">

        <EditText
            android:id="@+id/txtName"
            android:layout_width="350dp"
            android:layout_height="45dp"
            android:text="Charuka Tharindhu"
            android:inputType="textEmailAddress"
            android:background="@drawable/forget"
            android:textColor="#0d6e6a"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:paddingLeft="20dp">
        </EditText>

        <EditText
            android:id="@+id/txtEmail"
            android:layout_width="350dp"
            android:layout_height="45dp"
            android:text="Charukatharindhu@gmail.com"
            android:inputType="textEmailAddress"
            android:background="@drawable/forget"
            android:textColor="#0d6e6a"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:paddingLeft="20dp">
        </EditText>
        <EditText
            android:id="@+id/txtCity"
            android:layout_width="350dp"
            android:layout_height="45dp"
            android:text="Melbourne"
            android:inputType="textEmailAddress"
            android:background="@drawable/forget"
            android:textColor="#0d6e6a"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:paddingLeft="20dp">
        </EditText>


        <EditText
            android:id="@+id/txtPnum"
            android:layout_width="350dp"
            android:layout_height="45dp"
            android:text="0710915061"
            android:inputType="textEmailAddress"
            android:background="@drawable/forget"
            android:textColor="#0d6e6a"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:paddingLeft="20dp">
        </EditText>


        <Button
            android:id="@+id/btnLogin"
            android:layout_width="350dp"
            android:layout_height="58dp"
            android:text="Update"
            android:textSize="18dp"
            android:textColor="#fff"
            android:textStyle="bold"
            app:cornerRadius="19dp"
            android:background="#1520B8"
            android:onClick="oneclick"
            android:layout_marginTop="10dp"
            tools:ignore="OnClick">
        </Button>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/bottom_nav"
            android:background="#1520B8"
            app:itemTextColor="@drawable/selector"
            app:itemIconTint="@drawable/selector"
            app:menu="@menu/menu_navigation"
            android:layout_alignParentBottom="true"
            tools:ignore="NotSibling">

        </com.google.android.material.bottomnavigation.BottomNavigationView>
    </RelativeLayout>
</LinearLayout>